{
  "name": "@akashic/akashic-cli-export-html",
  "version": "0.1.13",
  "description": "A module to convert your Akashic game to a runnable standalone.",
  "main": "lib/index.js",
  "scripts": {
    "prepublish": "npm run clean && npm run build",
    "clean": "shx rm -rf lib && shx rm -rf spec/build",
    "start": "npm run build && node bin/run",
    "build": "npm run build:app && npm run build:export",
    "build:app": "tsc -p ./",
    "build:export": "npm run build:export:tsc && npm run build:export:copy",
    "build:export:tsc": "tsc -p ./src/export/tsconfig.json",
    "build:export:copy": "npm run build:export:copy:v2 && npm run build:export:copy:v1",
    "build:export:copy:v2": "shx cp -r tmp/export/build templates/template-export-html-v2/js",
    "build:export:copy:v1": "shx cp -r tmp/export/build templates/template-export-html-v1/js",
    "lint": "npm run lint:ts && npm run lint:md",
    "lint:ts": "tslint --type-check -c tslint.json --project ./tsconfig.json",
    "lint:md": "remark ./*.md --frail --no-stdout --quiet --rc-path ./.remarkrc",
    "test": "npm run test:jasmine && npm run lint",
    "test:jasmine": "istanbul cover --report text --report html --colors -i ./lib/main.node.js ./node_modules/jasmine/bin/jasmine.js",
    "copy": "npm run copy:browserify && npm run copy:minify && npm run copy:delete",
    "copy:browserify": "browserify --require ./node_modules/@akashic/akashic-engine/lib/main.node.js:@akashic/akashic-engine --outfile ./templates/template-export-html-v2/js/akashic-engine.js",
    "copy:minify": "node build/copyfiles.js",
    "copy:delete": "shx rm -rf ./templates/template-export-html-v2/js/akashic-engine.js"
},
  "author": "DWANGO Co., Ltd.",
  "license": "MIT",
  "bin": {
    "akashic-cli-export-html": "./bin/run"
  },
  "files": [
    "README.md",
    "bin",
    "lib",
    "templates",
    "package.json"
  ],
  "devDependencies": {
    "@akashic/akashic-engine": "~2.0.0",
    "@types/commander": "~2.3.31",
    "@types/fs-readdir-recursive": "~1.0.0",
    "@types/node": "~8.0.53",
    "@types/uglify-js": "~2.6.29",
    "browserify": "^13.0.0",
    "shx": "~0.2.2",
    "jasmine": "^2.1.1",
    "jasmine-reporters": "~2.0.4",
    "istanbul": "^0.3.2",
    "jasmine-terminal-reporter": "~0.9.1",
    "remark-cli": "~2.0.0",
    "remark-lint": "~5.0.1",
    "mock-fs": "3.12.1",
    "tslint": "~5.9.0",
    "typescript": "~2.6.1",
    "vinyl-source-stream": "^1.1.0"
  },
  "typings": "lib/index.d.ts",
  "dependencies": {
    "@akashic/akashic-cli-commons": "~0.2.8",
    "@types/fs-extra": "^5.0.0",
    "commander": "2.8.1",
    "ect": "^0.5.9",
    "fs-extra": "3.0.1",
    "fs-readdir-recursive": "~0.1.2",
    "uglify-js": "2.6.1"
  },
  "optionalDependencies": {
    "@akashic/game-driver": "~1.0.0",
    "@akashic/pdi-browser": "~1.0.0",
    "@akashic/game-storage": "0.0.6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/akashic-games/akashic-cli-export-html.git"
  },
  "publishConfig": {
    "@akashic:registry": "http://registry.npmjs.org/"
  }
}
